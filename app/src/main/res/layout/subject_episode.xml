<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">
    <TextView android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:padding="12dp"
              android:id="@+id/episode_detail"
              app:layout_constraintEnd_toEndOf="parent"
              android:clickable="true"
              android:background="?android:attr/selectableItemBackground"
              tools:text="更新到第3话"
              android:focusable="true"
              app:layout_constraintBottom_toTopOf="@+id/episode_list"
              app:layout_constraintTop_toTopOf="@+id/item_title"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="@android:style/TextAppearance.Material.Subhead"
              android:padding="12dp"
              android:text="章节"
              android:id="@+id/item_title"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
            android:id="@+id/episodes_line"
            android:visibility="invisible"
            tools:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/item_title"
            app:layout_constraintBottom_toBottomOf="@+id/item_title"
            app:layout_constraintStart_toEndOf="@+id/item_title"
            app:layout_constraintEnd_toStartOf="@+id/episode_detail"
            android:padding="8dp"
            android:gravity="center_vertical">
        <TextView
                android:id="@+id/episodes_line_site"
                android:background="@drawable/bg_round_rect"
                android:textColor="@android:color/white"
                android:padding="2dp"
                android:paddingStart="4dp"
                android:textSize="@dimen/textSizeSmall"
                android:paddingEnd="4dp"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Site"/>
        <TextView
                android:id="@+id/episodes_line_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeMedium"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Provider Id"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_drop_down"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/episode_list"
            android:layout_width="match_parent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:clipToPadding="false"
            android:layout_height="wrap_content"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_episode_small"
            app:layout_constraintTop_toBottomOf="@+id/item_title"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/season_list"
            android:layout_width="match_parent"
            android:paddingStart="7dp"
            android:paddingEnd="6dp"
            android:paddingBottom="4dp"
            android:clipToPadding="false"
            android:layout_height="wrap_content"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_season"
            app:layout_constraintTop_toBottomOf="@+id/episode_list"/>
</androidx.constraintlayout.widget.ConstraintLayout>